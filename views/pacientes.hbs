<table border= "solid" id="tabla-pacientes">
            <h2>LISTADO DE PACIENTES</h2>
            <thead>
                <tr>
                     <th>Número de Cédula</th>
                     <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Edad</th>
                    <th>Teléfono</th>
                    <th>Opciones</th>
                                    </tr>
            </thead>
            <tbody>
                {{#each pacientes}}
                <form method="post" action="/pacientes/actualizar/{{cedula}}">
                    <tr>
                    <td><input id="cedula" name="cedula" value="{{cedula}}" disabled></td>
                    <td><input id="nombre" name="nombre" value="{{nombre}}" {{../opcion}}></td>
                    <td><input id="apellido" name="apellido" value="{{apellido}}" {{../opcion}}></td>
                    <td><input id="edad" name="edad" value="{{edad}}" {{../opcion}}></td>
                    <td><input id="telefono" name="telefono" value="{{telefono}}" {{../opcion}}></td>
                    <td>
                        {{#if ../activo}}
                     <input type="submit" value="enviar">
                       
                    {{else}}
                     <a class="eliminar" href="pacientes/eliminar/{{cedula}}">Eliminar</a>
                    <a class="editar" href="/pacientes/activar">Editar</a>
                    {{/if}}
                    </td>
                </tr>
                </form>
               {{/each}}
            </tbody>
        </table>
        <a href="pacientes/agregar">Agregar Paciente</a>